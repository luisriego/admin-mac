{% extends 'layout.html.twig' %}

{% block head %}
    <link href="{{ asset('assets/css/pages/file-upload.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/select2/dist/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->

    {#{{ include('dashboard/inc/_breadcrumb.html.twig') }}#}

    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->


    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        {{ include('dashboard/inc/_breadcrumb.html.twig') }}

        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-sm-12 col-xs-12">
                {{ form_start(form, {'attr': {'class': 'form-material m-t-30 row'}}) }}
                {{ form_errors(form) }}

                <div class="form-group col-md-2">
                    {{ form_label(form.nome, 'Nome', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.nome, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.email, 'e-mail', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_label(form.telefone, 'Telefone', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.telefone, {'attr': { 'data-mask': '(99) 99999-9999', 'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.empresa, 'Empresa', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.empresa, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_label(form.data, 'Criado em:', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.data, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-2">
                    {{ form_label(form.ip, 'IP', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.ip, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-7">
                    {{ form_label(form.tecnicos, 'Tecnicos', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.tecnicos, {'attr': {'style': 'width: 100%', 'multiple': 'multiple', 'class': 'select2 m-b-10 select2-multiple'}}) }}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.status, 'Status', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-2">
                    {{ form_label(form.valor, 'Valor', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.valor, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_label(form.tempo, 'tempo', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.tempo, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-8">
                    {{ form_label(form.mensagem, 'Solicitaçao', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.mensagem, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-7">
                    {{ form_label(form.problema, 'Problema Constatado', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.problema, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-5">
                    {{ form_label(form.solucao, 'Soluçao', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.solucao, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-12">
                    {{ form_label(form.usoInterno, 'Uso Interno', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.usoInterno, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>

                <div class="col-md-12 m-t-40">
                    {{ include('inc/_botones.accion.html.twig', {'referrer': 'chamados-abertos' }) }}
                </div>

                {{ form_widget(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->

    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->





    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->


{% endblock %}

{% block js %}
    <!-- Editable -->
    <script src="{{ asset('assets/plugins/jquery-datatables-editable/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('assets/plugins/tiny-editable/mindmup-editabletable.js') }}"></script>
    <script src="{{ asset('assets/plugins/tiny-editable/numeric-input-example.js') }}"></script>
    <script src="{{ asset('assets/js/chosen.jquery.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/select2/dist/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/mask.js') }}"></script>
    <script>
        //        $('#mainTable').editableTableWidget().numericInputExample().find('td:first').focus();
        $('#editable-datatable').editableTableWidget().numericInputExample().find('td:first').focus();
        $(document).ready(function() {
            $('#editable-datatable').DataTable();
        });

        $(".select2").select2();
        $('.selectpicker').selectpicker();
    </script>
{% endblock %}